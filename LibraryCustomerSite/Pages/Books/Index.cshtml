@page
@model LibraryCustomerSite.Pages.Books.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Library</title>
    <style>
        :root {
            --primary: #4CAF50;
            --primary-hover: #45a049;
            --background: #f0f0f0;
            --text-color: #333;
            --card-background: #fff;
            --card-shadow: rgba(0, 0, 0, 0.1);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--background);
            color: var(--text-color);
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 1rem;
        }

        .top-nav {
            background-color: var(--primary);
            color: white;
            font-size: 14px;
            padding: 0.5rem 0;
        }

        .top-nav__container {
            display: flex;
            justify-content: flex-end;
            gap: 1rem;
        }

        .top-nav__links a {
            color: white;
            text-decoration: none;
        }

        .header {
            background-color: var(--primary);
            padding: 1rem 0;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .header__logo {
            color: white;
            font-size: 2rem;
            text-decoration: none;
            font-weight: bold;
        }

        .search-bar {
            display: flex;
            flex: 1;
            margin: 0 1rem;
        }

        .search-bar__input {
            flex: 1;
            padding: 0.5rem;
            border: none;
            border-radius: 4px 0 0 4px;
            outline: none;
        }

        .search-bar__button {
            padding: 0.5rem 1rem;
            background: var(--primary-hover);
            border: none;
            color: white;
            border-radius: 0 4px 4px 0;
            cursor: pointer;
        }

        .header__cart {
            color: white;
            font-size: 1.5rem;
        }

        .main {
            padding: 2rem 0;
        }

        .main__container {
            display: flex;
            gap: 2rem;
        }

        .sidebar {
            width: 250px;
            flex-shrink: 0;
        }

        .sidebar__title {
            font-size: 1.2rem;
            margin-bottom: 1rem;
        }

        .filter-group {
            margin-bottom: 2rem;
        }

        .filter-group__title {
            font-size: 1rem;
            margin-bottom: 0.5rem;
        }

        .filter-group__item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 0.5rem;
            font-size: 1rem;
        }

        .products {
            flex: 1;
        }

        .products__header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .sort-buttons {
            display: flex;
            gap: 0.5rem;
        }

        .sort-button {
            padding: 0.5rem 1rem;
            background: var(--card-background);
            border: 1px solid var(--card-shadow);
            border-radius: 4px;
            cursor: pointer;
            transition: background 0.3s;
        }

        .sort-button--active {
            background: var(--primary);
            color: white;
        }

        .products__grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 1.5rem;
        }

        .product-card {
            background: var(--card-background);
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 4px var(--card-shadow);
            transition: transform 0.3s;
        }

        .product-card:hover {
            transform: translateY(-5px);
        }

        .product-card__image {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .product-card__content {
            padding: 1rem;
        }

        .product-card__title {
            font-size: 1rem;
            margin-bottom: 0.5rem;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .product-card__price {
            color: var(--primary);
            font-size: 1.2rem;
            margin-bottom: 0.5rem;
        }

        .product-card__discount {
            font-size: 0.9rem;
            color: #757575;
        }

        .product-card__status {
            font-size: 0.9rem;
            color: #757575;
        }

        .cart-icon {
            background-color: var(--primary);
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            border-radius: 50%;
        }

        .cart-icon svg {
            width: 24px;
            height: 24px;
            fill: white;
        }
    </style>
    <script>
        const sessionTimeout = 15 * 60 * 1000; // 30 phút = 30p * 60s * 1000 milisecond
        setTimeout(() => {
            alert("Your session has expired. You will be redirected to the login page.");
            window.location.href = '/Books/SignUp';
        }, sessionTimeout);
    </script>
    <!-- bootstrap css -->
    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
    <!-- style css -->
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <!-- Responsive-->
    <link rel="stylesheet" href="css/responsive.css">
    <!-- fevicon -->
    <link rel="icon" href="images/fevicon.png" type="image/gif" />
    <!-- Scrollbar Custom CSS -->
    <link rel="stylesheet" href="css/jquery.mCustomScrollbar.min.css">
    <!-- Tweaks for older IEs-->
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css">
    <!-- owl stylesheets -->
    <link rel="stylesheet" href="css/owl.carousel.min.css">
    <link rel="stylesheet" href="css/owl.theme.default.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.css" media="screen">
</head>
<body>
    <!-- Top Navigation -->
    <!-- header section start -->
    <div class="header_section">
        <div class="container-fluid header_main">
            <nav class="navbar navbar-expand-lg navbar-light bg-light" style="margin-bottom:1rem">
                <a class="logo" href="/Books"><img style="width: 15%" src="~/images/logo.jpg"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent" style="width: 37rem;">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/Books">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Books/Blog">Blog</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@(string.IsNullOrEmpty(HttpContext.Session.GetString("UserEmail")) ? "/Books/SignUp" : "/Books/WishList")">
                                WishList
                            </a>
                        </li>
                        <li class="nav-item">
                            @if (HttpContext.Session.GetInt32("UserId") != null)
                            {
                                <a class="nav-link" href="/Books/History?id=@HttpContext.Session.GetInt32("UserId")">Lịch Sử</a>
                            }
                            else
                            {
                                <a class="nav-link" href="/Books/SignUp">Lịch Sử</a>
                            }
                        </li>
                        <li class="nav-item">
                            @if (string.IsNullOrEmpty(HttpContext.Session.GetString("UserEmail")))
                            {
                                <a class="nav-link" href="/Books/SignUp">Đăng Nhập</a>
                            }
                            else
                            {
                                <form id="logoutForm" method="post" asp-page-handler="Logout" style="display: none;">
                                </form>
                                <a class="nav-link" href="javascript:void(0);" onclick="document.getElementById('logoutForm').submit();">Đăng Xuất</a>
                            }
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    <!-- Main Content -->
    <main class="main">
        <div class="container main__container" style="margin-top: 10rem;">
            <!-- Sidebar -->
            <aside class="sidebar">
                <h2 class="sidebar__title">BỘ LỌC TÌM KIẾM</h2>

                <form method="get">
                    <div class="filter-group">
                        <h3 class="filter-group__title">Theo Danh Mục</h3>
                        @if (Model.Categories != null)
                        {
                            @foreach (var category in Model.Categories)
                            {
                                <label class="filter-group__item">
                                    <input type="checkbox" name="categoryIds" value="@category.Id"
                                    @(Request.Query["categoryIds"].Contains(category.Id.ToString()) ? "checked" : "")>
                                    @category.Cname (@category.BookTitles.Count)
                                </label>
                            }
                        }
                        else
                        {
                            <p>No categories available.</p>
                        }
                    </div>
                    <button type="submit" class="btn btn-primary">Lọc</button>
                </form>
            </aside>

            <!-- Products -->
            <div class="products">
                <div class="products__header">
                    <div class="sort-buttons">
                        <span>Sắp xếp theo</span>
                        <a asp-page="./Index" asp-route-sortOrder="name" class="sort-button @(Request.Query["sortOrder"] == "name" ? "sort-button--active" : "")">Tên sách</a>
                        <a asp-page="./Index" asp-route-sortOrder="UnitInStock" class="sort-button @(Request.Query["sortOrder"] == "UnitInStock" ? "sort-button--active" : "")">Số lượng</a>
                        <a asp-page="./Index" asp-route-sortOrder="status" class="sort-button @(Request.Query["sortOrder"] == "status" ? "sort-button--active" : "")">Trạng thái</a>
                    </div>
                </div>

                <div class="products__grid">
                    @if (Model.Book != null)
                    {
                    @foreach (var book in Model.Book)
                    {
                        <a asp-page="./Details" asp-route-id="@book.Id" class="product-card-link" style="text-decoration: none">
                        <div class="product-card">
                                <img src="~/images/@book.Image" alt="@book.Bname" class="product-card__image" style="text-decoration: none">
                                <div class="product-card__content" style="text-decoration: none">
                                <h3 class="product-card__title">@book.Bname</h3>
                                <div class="product-card__price">@book.Author</div>
                                        <div class="product-card__discount">@book.UnitInStock</div>
                                <div class="product-card__status">
                                            @if (book.UnitInStock >= 1)
                                    {
                                        <span style="color: green;">Còn Hàng</span>
                                    }
                                    else
                                    {
                                        <span style="color: red;">Hết Hàng</span>
                                    }
                                </div>
                            </div>
                        </div>
                        </a>
                    }
                    }
                    else
                    {
                        <p>No books available.</p>
                    }
                </div>
            </div>
        </div>
    </main>
</body>
</html>