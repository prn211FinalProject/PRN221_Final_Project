@page
@model LibraryCustomerSite.Pages.Books.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Library</title>
    <style>
        :root {
            --primary: #ee4d2d;
            --primary-hover: #fb5533;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            background-color: #f5f5f5;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1rem;
        }

        /* Top Navigation */
        .top-nav {
            background-color: var(--primary);
            color: white;
            font-size: 13px;
        }

        .top-nav__container {
            display: flex;
            justify-content: flex-end;
            padding: 0.5rem 0;
        }

        .top-nav__links {
            display: flex;
            gap: 1rem;
        }

            .top-nav__links a {
                color: white;
                text-decoration: none;
            }

        /* Header */
        .header {
            background-color: var(--primary);
            padding-bottom: 1rem;
        }

        .header__container {
            display: flex;
            align-items: center;
            gap: 2rem;
        }

        .header__logo {
            color: white;
            font-size: 2rem;
            text-decoration: none;
            font-weight: bold;
        }

        .search-bar {
            flex: 1;
            display: flex;
        }

        .search-bar__input {
            flex: 1;
            padding: 0.5rem;
            border: none;
            border-radius: 2px 0 0 2px;
            outline: none;
        }

        .search-bar__button {
            padding: 0.5rem 1.5rem;
            background: var(--primary-hover);
            border: none;
            color: white;
            border-radius: 0 2px 2px 0;
            cursor: pointer;
        }

        .header__cart {
            color: white;
            font-size: 1.5rem;
        }

        /* Popular Keywords */
        .keywords {
            display: flex;
            gap: 1rem;
            margin-top: 0.5rem;
        }

            .keywords a {
                color: white;
                text-decoration: none;
                font-size: 12px;
            }

        /* Main Content */
        .main {
            padding: 1.5rem 0;
        }

        .main__container {
            display: flex;
            gap: 1.5rem;
        }

        /* Sidebar */
        .sidebar {
            width: 200px;
            flex-shrink: 0;
        }

        .sidebar__title {
            font-size: 1rem;
            margin-bottom: 1rem;
        }

        .filter-group {
            margin-bottom: 1.5rem;
        }

        .filter-group__title {
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
        }

        .filter-group__item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }

        /* Product Grid */
        .products {
            flex: 1;
        }

        .products__header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
        }

        .sort-buttons {
            display: flex;
            gap: 0.5rem;
        }

        .sort-button {
            padding: 0.5rem 1rem;
            background: #fff;
            border: none;
            border-radius: 2px;
            cursor: pointer;
        }

        .sort-button--active {
            background: #ebebeb;
        }

        .products__grid {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            gap: 1rem;
        }

        .product-card {
            background: white;
            border-radius: 2px;
            overflow: hidden;
            box-shadow: 0 1px 2px rgba(0,0,0,0.1);
        }

        .product-card__image {
            width: 100%;
            aspect-ratio: 1;
            object-fit: cover;
        }

        .product-card__content {
            padding: 0.5rem;
        }

        .product-card__title {
            font-size: 0.8rem;
            margin-bottom: 0.5rem;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .product-card__price {
            color: var(--primary);
            font-size: 1rem;
            margin-bottom: 0.25rem;
        }

        .product-card__discount {
            font-size: 0.75rem;
            color: #757575;
        }

        .product-card__rating {
            display: flex;
            align-items: center;
            gap: 0.25rem;
            font-size: 0.75rem;
            color: #757575;
        }

        .product-card__rating-star {
            color: #ee4d2d;
        }

        .cart-icon {
            background-color: #FF5733;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
        }

            .cart-icon svg {
                width: 24px;
                height: 24px;
                fill: white;
            }
    </style>
    <script>
        // time for session to expire
        // const sessionTimeout = 15 * 1000; // 15s
        const sessionTimeout = 15 * 60 * 1000; // 30 phút = 30p * 60s * 1000 milisecond
        // Kiểm tra thời gian hết hạn phiên
        setTimeout(() => {
            alert("Your session has expired. You will be redirected to the login page.");
            window.location.href = '/Books/SignUp'; // Chuyển hướng đến trang đăng nhập
        }, sessionTimeout);
    </script>
</head>
<body>
    <!-- Top Navigation -->
    <div class="top-nav">
        <div class="container top-nav__container">
            <div class="top-nav__links">
                <div class="cart-icon">
                    <a href="@(string.IsNullOrEmpty(HttpContext.Session.GetString("UserEmail")) ? "/Books/SignUp" : "/Books/WishList")">
                    <svg viewBox="0 0 24 24">
                        <path d="M7 18c-1.1 0-1.99.9-1.99 2S5.9 22 7 22s2-.9 2-2-.9-2-2-2zM1 2v2h2l3.6 7.59-1.35 2.45c-.16.28-.25.61-.25.96 0 1.1.9 2 2 2h12v-2H7.42c-.14 0-.25-.11-.25-.25l.03-.12.9-1.63h7.45c.75 0 1.41-.41 1.75-1.03l3.58-6.49c.08-.14.12-.31.12-.48 0-.55-.45-1-1-1H5.21l-.94-2H1zm16 16c-1.1 0-1.99.9-1.99 2s.89 2 1.99 2 2-.9 2-2-.9-2-2-2z" />
                    </svg>
                    </a>
                </div>
                @if (string.IsNullOrEmpty(HttpContext.Session.GetString("UserEmail")))
                {
                    <a href="/Books/SignUp">Đăng Ký</a>
                    <a href="/Books/SignUp">Đăng Nhập</a>
                }
                else
                {
                    <span>Xin chào, @HttpContext.Session.GetString("UserEmail")</span>
                    <form method="post" asp-page-handler="Logout" style="display: inline;">
                        @* <input type="hidden" name="FormAction" value="Logout" /> *@
                        <button class="btn btn-primary" type="submit">Đăng Xuất</button>
                    </form>
                }
            </div>
            
        </div>
    </div>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    <!-- Main Content -->
    <main class="main">
        <div class="container main__container">
            <!-- Sidebar -->
            <aside class="sidebar">
                <h2 class="sidebar__title">BỘ LỌC TÌM KIẾM</h2>

                <form method="get">
                    <div class="filter-group">
                        <h3 class="filter-group__title">Theo Danh Mục</h3>
                        @if (Model.Categories != null)
                        {
                            @foreach (var category in Model.Categories)
                            {
                                <label class="filter-group__item">
                                    <input type="checkbox" name="categoryIds" value="@category.Id"
                                    @(Request.Query["categoryIds"].Contains(category.Id.ToString()) ? "checked" : "")>
                                    @category.Cname (@category.BookTitles.Count)
                                </label>
                            }
                        }
                        else
                        {
                            <p>No categories available.</p>
                        }
                    </div>
                    <button type="submit" class="btn btn-primary">Lọc</button>
                </form>
            </aside>


            <!-- Products -->
            <div class="products">
                <div class="products__header">
                    <div class="sort-buttons">
                        <span>Sắp xếp theo</span>
                        <a asp-page="./Index" asp-route-sortOrder="name" class="sort-button @(Request.Query["sortOrder"] == "name" ? "sort-button--active" : "")">Tên sách</a>
                        <a asp-page="./Index" asp-route-sortOrder="UnitInStock" class="sort-button @(Request.Query["sortOrder"] == "UnitInStock" ? "sort-button--active" : "")">Số lượng</a>
                        <a asp-page="./Index" asp-route-sortOrder="status" class="sort-button @(Request.Query["sortOrder"] == "status" ? "sort-button--active" : "")">Trạng thái</a>
                    </div>
                </div>

                <div class="products__grid">
                    @if (Model.Book != null)
                    {
                    @foreach (var book in Model.Book)
                    {
                        <a asp-page="./Details" asp-route-id="@book.Id" class="product-card-link" style="text-decoration: none">
                        <div class="product-card">
                                <img src="~/images/@book.Image" alt="@book.Bname" class="product-card__image" style="text-decoration: none">
                                <div class="product-card__content" style="text-decoration: none">
                                <h3 class="product-card__title">@book.Bname</h3>
                                <div class="product-card__price">@book.Author</div>
                                        <div class="product-card__discount">@book.UnitInStock</div>
                                <div class="product-card__status">
                                            @if (book.UnitInStock >= 1)
                                    {
                                        <span style="color: green;">Còn Hàng</span>
                                    }
                                    else
                                    {
                                        <span style="color: red;">Hết Hàng</span>
                                    }
                                </div>
                            </div>
                        </div>
                        </a>
                    }
                    }
                    else
                    {
                        <p>No books available.</p>
                    }
                </div>
            </div>
        </div>
    </main>
</body>
</html>