<Window x:Class="LibraryAdminSite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryAdminSite"
        mc:Ignorable="d"
        Title="MainWindow" Height="680" Width="1000" Loaded="Window_Loaded">
    <Grid Background="#f0f0f0">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Background="#FF0CADD1" Orientation="Horizontal">
            <TextBlock Text="Library Management System" FontSize="30" VerticalAlignment="Center" Margin="350,0" FontWeight="Bold" Foreground="White"/>
        </StackPanel>

        <!-- Sidebar -->
        <StackPanel Grid.Row="1" Grid.Column="0" Background="#2c3e50" Margin="0,10,0,0">
            <TextBlock Foreground="White" FontSize="24" Text="🏠" Margin="5,20"/>
            <TextBlock Foreground="White" FontSize="24" Text="📚" Margin="5,20"/>
            <TextBlock Foreground="White" FontSize="24" Text="👥" Margin="5,20"/>
            <TextBlock Foreground="White" FontSize="24" Text="⚙️" Margin="5,20"/>
        </StackPanel>

        <!-- Main Content -->
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="20">
            <StackPanel Orientation="Horizontal">
                <Border Width="300" Background="White" BorderBrush="#bdc3c7" BorderThickness="1" Padding="10">
                    <StackPanel>
                        <Image Name="imgBookCover" Width="200" Height="275" Margin="0,0,0,10" Stretch="UniformToFill"/>
                        <Button Name="btnUpload" Background="#3498db" Foreground="White" Content="Upload Ảnh" Margin="0,0,0,5" Click="btnUpload_Click"/>
                        <TextBox Text="{Binding ElementName=lvDisplay, Path=SelectedItem.Id, Mode=OneWay}" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding ElementName=lvDisplay, Path=SelectedItem.Name, Mode=OneWay}" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding ElementName=lvDisplay, Path=SelectedItem.Genre, Mode=OneWay}" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding ElementName=lvDisplay, Path=SelectedItem.Author, Mode=OneWay}" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding ElementName=lvDisplay, Path=SelectedItem.PublishDate, Mode=OneWay}" Margin="0,0,0,5"/>

                        <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                            <Button Background="#27ae60" Foreground="White" Content="Cập nhật" Margin="0,0,0,5"/>
                            <Button Background="#e74c3c" Foreground="White" Content="Xóa" Margin="0,0,0,5"/>
                            <Button Background="#2ecc71" Foreground="White" Content="Thêm mới" Click="Button_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Background="White" Margin="20" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" BorderBrush="#bdc3c7" BorderThickness="1" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Book Management" HorizontalAlignment="Center" FontSize="25"></TextBlock>
                        <TextBox Text="Nhập tên sách..." Margin="0,0,0,20"/>

                        <ListView Name="lvDisplay" Margin="0,0,0,20" SelectionChanged="lvDisplay_SelectionChanged">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Mã số" DisplayMemberBinding="{Binding Id}" Width="40"/>
                                    <GridViewColumn Header="Tên sách" DisplayMemberBinding="{Binding Name}" Width="120"/>
                                    <GridViewColumn Header="Thể loại" DisplayMemberBinding="{Binding Genre}" Width="70"/>
                                    <GridViewColumn Header="NXB" DisplayMemberBinding="{Binding Publisher}" Width="100"/>
                                    <GridViewColumn Header="Tác giả" DisplayMemberBinding="{Binding Author}" Width="100"/>
                                    <GridViewColumn Header="Ngày XB" DisplayMemberBinding="{Binding PublishDate}" Width="100"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
